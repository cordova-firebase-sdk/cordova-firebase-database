{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    },
    "globals": {
      "require": false,
      "Symbol": false,
      "window": false,
      "cordova": false,
      "Promise": false,
      "module": false,
      "angular": false,
      "firebase": false,
      "exports": false
    }
}
